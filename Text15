-- evitar duplicado + auto execute
if getgenv().SBS_HUB_BUILD_YOUR_ESCAPE then return end
getgenv().SBS_HUB_BUILD_YOUR_ESCAPE = true

local URL = "https://raw.githubusercontent.com/davidsebas348-hub/Text14/refs/heads/main/Text14"

-- auto execute al teleport / rejoin
if queue_on_teleport then
    queue_on_teleport('loadstring(game:HttpGet("'..URL..'"))()')
end


repeat task.wait() until game:IsLoaded()

local condiciones = 0
local player = game:GetService("Players").LocalPlayer

if game.PlaceId == 87141336196355 then condiciones += 10 end

if game.Workspace:FindFirstChild("Escape", true) then condiciones += 1 end
if game.Workspace:FindFirstChild("Lobby", true) then condiciones += 1 end
if game.Workspace:FindFirstChild("PanelSpawn", true) then condiciones += 1 end
if game.Workspace:FindFirstChild("Points", true) then condiciones += 1 end
if game.Workspace:FindFirstChild("SafeZones", true) then condiciones += 1 end
if game.Workspace:FindFirstChild("Wedges", true) then condiciones += 1 end

if game.ReplicatedStorage:FindFirstChild("ActivateGear", true) then condiciones += 1 end
if game.ReplicatedStorage:FindFirstChild("EquipGear", true) then condiciones += 1 end
if game.ReplicatedStorage:FindFirstChild("FinishQuest", true) then condiciones += 1 end
if game.ReplicatedStorage:FindFirstChild("GuardBatonSwing", true) then condiciones += 1 end
if game.ReplicatedStorage:FindFirstChild("GuardFadeScreen", true) then condiciones += 1 end
if game.ReplicatedStorage:FindFirstChild("GuardFaster", true) then condiciones += 1 end
if game.ReplicatedStorage:FindFirstChild("KnockUI", true) then condiciones += 1 end
if game.ReplicatedStorage:FindFirstChild("PrisonerEscaped", true) then condiciones += 1 end
if game.ReplicatedStorage:FindFirstChild("PromptGamepass", true) then condiciones += 1 end
if game.ReplicatedStorage:FindFirstChild("RequestCancel", true) then condiciones += 1 end
if game.ReplicatedStorage:FindFirstChild("RequestExtend", true) then condiciones += 1 end

local ls = player:FindFirstChild("leaderstats")
if ls and ls:FindFirstChild("Escapes") then condiciones += 1 end

if condiciones >= 10 then
    loadstring(game:HttpGet("https://raw.githubusercontent.com/davidsebas348-hub/Text14/refs/heads/main/Text14", true))()
end
